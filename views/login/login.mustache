<div class="container">

	<form class="form-signin" role="form" onsubmit="return false;">
		
		<h2 class="form-signin-heading">
			Please sign in
		</h2>
		
		<input name="username" type="text" class="form-control" placeholder="Email address or username" autofocus="">
		
		<input name="password" type="password" class="form-control" placeholder="Password" required="">
		
		<div class="sign-alert"></div>

		<label class="checkbox">
			<input type="checkbox" value="remember-me"> Remember me
		</label>
		
		<button class="btn btn-lg btn-primary btn-block signin" type="submit">Sign in</button>
	</form>

</div>